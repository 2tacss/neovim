{
	"diagnostic.enable": true,
	"python.linting.enabled": true,
	"python.jediPath": "~/.pyenv/versions/neovim3/lib/python3.10.5/site-packages/",
	"intelephense.licenceKey": "004BID8XBCD43OE",
	"intelephense.enable": true,
	"suggest.enablePreselect": false,
	"diagnostic.virtualText": true,
	"diagnostic.virtualTextCurrentLineOnly": false,
	"python.linting.flake8Enabled": true,
	"python.linting.flake8Args": [
		"--ignore=E501"
	],
	"python.linting.flake8Path": "/Users/vahamut/.pyenv/shims/flake8",
	"python.linting.pylintEnabled": false,
	"python.linting.pyrightEnabled": false,
	"python.linting.mypyEnabled": false,

	"clangd": {
		"command": "/usr/bin/clangd",
		"rootPatterns": [
			".git",
			"compile_commands.json",
			"Makefile"
		],
		"filetypes": [
			"c",
			"cpp",
			"objc",
			"objcpp",
			"mm"
		],
		"clangd.arguments": [
			"--background-index",
			"--clang-tidy",
			"--header-insertion=iwyu",
			"--query-driver=/usr/bin/g++,/usr/bin/clang++,/opt/local/bin/*,/opt/local/**/lib/**/ld,/opt/homebrew/include",
			"-extra-arg=-I/opt/homebrew/include",
			"-extra-arg=-I/opt/homebrew/Cellar"
		],
		"clangd.fallbackFlags": [
        "-I/opt/homebrew/include",
        "-I/opt/homebrew/Cellar/sdl2/2.32.4/include",
        "-std=c++17"
		]
	}
}
